<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Feedback"
    android:background="@drawable/backgroud"
    android:orientation="vertical"
    android:padding="10dp">
    <TextView
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:background="@color/boysenberry"
        android:text="Book Status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     android:layout_marginTop="150dp">

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:id="@+id/logo_Imge"
        android:src="@drawable/icon"
        android:layout_width="110dp"
        android:layout_height="110dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:layout_marginLeft="50dp"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Date:"
        android:textSize="25dp"
        />

    <TextView

        android:id="@+id/Book_Date_Status"
        style="@style/Base.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Date"
        android:text=""
        android:textSize="20dp" />
</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="50dp"
                android:layout_width="104dp"
                android:layout_height="wrap_content"
                android:text="Book:-"
                android:textSize="25dp"
                app:counterTextColor="@color/black" />

            <TextView
                style="@style/Base.CardView"
                android:id="@+id/Bookname_Status"
                android:layout_width="254dp"
                android:layout_height="wrap_content"
                android:hint="Book_name"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="50dp"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:text="Author:-"

                android:textSize="25dp" />

            <TextView
                style="@style/Base.CardView"
                android:id="@+id/BookAuthor_Status"
                android:layout_width="219dp"
                android:layout_height="wrap_content"
                android:hint="Author name"
                android:textSize="20dp"
                android:text=""
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="50dp"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:text="E'No:-"
                android:textSize="25dp"
                />

            <TextView
                android:textSize="20dp"
                style="@style/Base.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/enrollmentNo_Status"
                android:hint="enrollmentNo" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="50dp"


                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:text="Status:-"
                android:textSize="25dp" />

            <TextView
                style="@style/Base.CardView"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Book_Status"
                android:hint="Status" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>

</LinearLayout>