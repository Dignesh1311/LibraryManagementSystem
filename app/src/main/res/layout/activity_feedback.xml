<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Feedback"
    android:background="@drawable/backgroud"
    android:orientation="vertical"
    android:padding="10dp">
    <TextView
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:background="@color/boysenberry"
        android:text="FEEDBACK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <ImageView
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:id="@+id/logo_Imge"
        android:src="@drawable/icon"
        android:layout_width="110dp"
        android:layout_height="110dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        >

        <EditText
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/feedback_Username"
            android:hint="Username"
            android:editable="false"
            />



        <EditText
            android:editable="false"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/feedback_email"
            android:hint="Email"/>

        <EditText
            android:editable="false"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/feedback_PhoneNo"
            android:hint="PhoneNo" />


        <EditText
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/feedback_write"
            android:hint="WRITE YOU FEEDBACK"
            />


        <RatingBar
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:id="@+id/feedback_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="5"/>

        <Button
            android:id="@+id/Student_Submit_Data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:background="#000"
            android:textColor="#fff"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>

</LinearLayout>

