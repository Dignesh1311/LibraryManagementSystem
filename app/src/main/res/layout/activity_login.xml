<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:background="@drawable/backgroud"
    android:padding="20dp"
    >

    <ImageView
        android:layout_marginTop="80dp"
        android:layout_gravity="center"
        android:id="@+id/logo_Imge"
        android:src="@drawable/icon"
        android:layout_width="110dp"
        android:layout_height="110dp"/>
    <TextView
        android:textColor="@color/boysenberry"
        android:layout_gravity="center"
        android:text="Student"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:textColor="@color/boysenberry"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/person"
        android:id="@+id/slogan_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In To Continue"
        android:textSize="25sp"
        android:fontFamily="sans-serif-medium"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        >
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Email_Student"
            android:hint="Email"


            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/person"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Password_Student_login"
            android:hint="Password"
            app:passwordToggleEnabled="true"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/password"/>
        </com.google.android.material.textfield.TextInputLayout>
<!--

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/Student_forgot_password"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="#000"
            android:text="Forget Password"
            android:layout_gravity="right"
            android:elevation="0dp"
            android:layout_margin="5dp"/>
-->

        <Button
            android:id="@+id/Submit_Student_Data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textColor="#fff"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="5dp"/>

        <Button

            android:textColor="@color/white"
            android:text="Create a New Accout!"
            android:id="@+id/creat_new_Accout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />




    </LinearLayout>



</LinearLayout>
